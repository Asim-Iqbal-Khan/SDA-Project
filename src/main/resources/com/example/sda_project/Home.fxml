<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sda_project.HomeController"
            fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
    <content>
        <VBox spacing="20.0">
            <padding>
                <Insets top="10.0" bottom="20.0" left="20.0" right="20.0"/>
            </padding>
            <HBox spacing="20.0" styleClass="navbar">
                <Button styleClass="btn" text="Home" />
                <Button styleClass="btn" text="About" onAction="#goToAbout" />
                <Button styleClass="btn" text="Contact" />
                <Button styleClass="btn" text="Cart" onAction="#goToCart" />
            </HBox>
            <HBox spacing="10" alignment="center">
                <TextField fx:id="searchField" promptText="Search..." HBox.hgrow="ALWAYS" prefWidth="200" styleClass="searchBar" />
                <Button fx:id="searchBtn" styleClass="searchBtn" text="Search" onAction="#handleSearchButton" />
            </HBox>
            <HBox>
                <Label fx:id="searchResultsLabel" text="Results will appear here." />
            </HBox>
            <VBox fx:id="productList" spacing="10"></VBox>
        </VBox>
    </content>
</ScrollPane>