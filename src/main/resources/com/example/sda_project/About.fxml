<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.control.Label?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sda_project.controller.AboutController"
            fitToWidth="true" hbarPolicy="NEVER">
    <padding>
        <Insets top="10.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>
    <VBox spacing="20.0">
        <!-- Navigation Bar -->
        <HBox alignment="CENTER" spacing="15">
            <HBox spacing="20.0" styleClass="navbar">
                <Button styleClass="btn" text="Home" onAction="#goToHome" />
                <Button styleClass="btn" text="About" />
                <Button styleClass="btn" text="Browse" onAction="#goToBrowse" />
                <Button styleClass="btn" text="Cart" onAction="#goToCart" />
                <Button styleClass="btn" text="WishList" onAction="#goToWishList" />
                <Button styleClass="btn" text="Order Reviews" onAction="#goToOrderReviews" />
            </HBox>
            <Button mnemonicParsing="false" onAction="#handleLogOut" prefHeight="30.0" prefWidth="120.0" styleClass="signout" text="Sign Out" textFill="#e43415" />
        </HBox>

        <!-- Team Roles Section -->
        <VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;">
            <HBox alignment="CENTER">
                <Label text="Team Roles in Creating This Application" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            </HBox>
            <VBox spacing="8.0" style="-fx-padding: 10;">
                <HBox>
                    <Label text="• Asim: " style="-fx-font-weight: bold; -fx-text-fill: #0078d7;" />
                    <Label text="Team Lead and Database Designer" style="-fx-text-fill: #333;" />
                </HBox>
                <HBox>
                    <Label text="• Moiz: " style="-fx-font-weight: bold; -fx-text-fill: #0078d7;" />
                    <Label text="Backend Developer" style="-fx-text-fill: #333;" />
                </HBox>
                <HBox>
                    <Label text="• Aniq and Shayan: " style="-fx-font-weight: bold; -fx-text-fill: #0078d7;" />
                    <Label text="Frontend Developers" style="-fx-text-fill: #333;" />
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</ScrollPane>
