<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<ScrollPane styleClass="page" fitToWidth="true" hbarPolicy="NEVER" stylesheets="@DeliveryBoy.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sda_project.controller.DeliveryBoyController">
    <VBox spacing="50">
        <padding>
            <Insets top="10.0" bottom="20.0" left="20.0" right="20.0"/>
        </padding>
        <HBox spacing="30" styleClass="navbar">
            <Button mnemonicParsing="false" styleClass="btn" text="Assigned Orders" />
            <Button mnemonicParsing="false" styleClass="btn" text="Total Orders" onAction="#gotoTotalOrders" />
            <Button mnemonicParsing="false" styleClass="btn" text="Reviews" onAction="#goToReviews" />
        </HBox>
        <VBox fx:id="orderList"></VBox>

    </VBox>
</ScrollPane>